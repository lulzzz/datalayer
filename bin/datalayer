export DATALAYER_BIN_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export DATALAYER_SBIN_DIR=$DATALAYER_BIN_DIR/../sbin

INITIAL_PATH=$PATH
export PATH=$DATALAYER_BIN_DIR:$DATALAYER_BIN_DIR/../sbin/util:$DATALAYER_BIN_DIR/../sbin/cmd:$PATH

source $DATALAYER_SBIN_DIR/datalayer-env
source $DATALAYER_SBIN_DIR/datalayer-cli-control

$DATALAYER_SBIN_DIR/datalayer-header "$@"

if [ $# == 0 ] ; then
#  echo $USAGE
  exit 0;
fi

DATALAYER_SHOW_HEADER=false /bin/bash $1 "${@:2}"
FLAG=$?

PATH=$INITIAL_PATH

exit $FLAG
